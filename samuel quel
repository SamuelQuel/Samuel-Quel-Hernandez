         2022183        */



int POT1  = A0;
int POT2  = A1;
int POT3  = A2;
int pin1 =3;
int pin2 =5;
int pin3 =6;
int Lectura1;
int Lectura2;
int Lectura3;

void setup()
{
  Serial.begin(9600);
 pinMode(POT1,INPUT);
   pinMode(pin1,OUTPUT);
 pinMode(POT2,INPUT);
   pinMode(pin2,OUTPUT);
 pinMode(POT3,INPUT);
   pinMode(pin3,OUTPUT);

}

void loop()
{

 Lectura1 = analogRead(POT1)/4;
  analogWrite(pin1,Lectura1);
  delay(500);
 Lectura2 = analogRead(POT2)/4;
  analogWrite(pin2,Lectura2); 
  delay(500);
 Lectura3 = analogRead(POT3)/4;
  analogWrite(pin3,Lectura3);
  delay(500);
  
  Serial.print("Lectura para led RGB:");
  Serial.print(" R: ");
  Serial.print(Lectura1);
  Serial.print(" G: ");
  Serial.print(Lectura2);
  Serial.print(" B ");
  Serial.println(Lectura3);
  
 
    
}

