float
  R1=10000;


float
  R2=100000;

void setup()
{
  Serial.begin(9600);
}
void loop()
{
float v=(analogRead(A1)*5)/1023.0;
float Resultado=(v/(R2/(R1+R2)));
Serial.print("v= ");
Serial.println(Resultado);
delay(500);
}
